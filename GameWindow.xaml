                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Fails:"
                TextAlignment="Center" />
            <TextBlock
                x:Name="failsTextBox"
                Grid.Column="9"
                Margin="5,5,5,5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="0"
                TextAlignment="Center" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
