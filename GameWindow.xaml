                x:Name="resultButton"
                Grid.Column="2"
                Width="165"
                Height="40"
                Margin="10,0,0,0"
                Padding="5"
                HorizontalAlignment="Left"
                Click="resultButton_Click"
                Content="Show my results"
                Cursor="Hand" />
            <Button
                x:Name="exitButton"
                Grid.Column="3"
                Width="140"
                Height="40"
                Margin="10,0,0,0"
                Padding="5"
                HorizontalAlignment="Left"
                Click="exitButton_Click"
                Content="Change player"
                Cursor="Hand" />
            <TextBlock
                Grid.Column="4"
                Margin="15,5,5,5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Level:"
                TextAlignment="Center" />
            <ComboBox
                x:Name="levelsComboBox"
                Grid.Column="5"
                Width="70"
                Height="40" />
            <TextBlock
                Grid.Column="6"
                Margin="15,5,5,5"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Text="Speed (chars/min):"
                TextAlignment="Center" />
